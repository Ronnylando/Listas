{
  "compilerOptions": {
    /* ===== Base ===== */
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    /* ===== React ===== */
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    /* ===== Segurança e boas práticas ===== */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    /* ===== Imports ===== */
    "verbatimModuleSyntax": true, // força separar import de tipo e de valor
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}